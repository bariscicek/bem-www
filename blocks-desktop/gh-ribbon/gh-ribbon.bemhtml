block gh-ribbon {

    tag: 'a'

    attrs: {
        href: 'https://github.com/bem/'
    }

    content: {
        elem: 'image'
    }

    elem image {
        tag: 'img'

        attrs: {
            src: 'https://s3.amazonaws.com/github/ribbons/forkme_right_gray_6d6d6d.png',
            alt: 'Fork BEM on GitHub'
        }
    }

}
